{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

  <h1>Servicios</h1>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Imagen</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for servicio in servicios %}
      <tr>
        <td><a href="{{ path('servicio_show', { 'id': servicio.id }) }}">{{ servicio.id }}</a></td>
        <td>{{ servicio.imagen }}</td>
        <td>
          <ul>
            <li>
              <a href="{{ path('servicio_show', { 'id': servicio.id }) }}">Ver</a>
            </li>
            <li>
              <a href="{{ path('servicio_edit', { 'id': servicio.id }) }}">Editar</a>
            </li>
          </ul>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('servicio_new') }}">Agregar Servicio</a>
    </li>
  </ul>
</div>
{% endblock %}
