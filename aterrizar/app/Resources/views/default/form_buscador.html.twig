<div id="buscar_vuelo" class="card azul-gris z-depth-5">
  <div class="card-content white-text">
    <span class="card-title">Encontrá tu vuelo</span>
    <form action="#">
      <div class="input-field col s12">
        <span class="material-icons prefix">flight_takeoff</span>
        {{ form_widget(form_vuelo.origen) }}
      </div>
      <div class="input-field col s12">
        <span class="material-icons prefix">flight_land</span>
        {{ form_widget(form_vuelo.destino) }}
      </div>
      <label class="col s12 white-text">FECHA</label>
      <div class="input-field col s12 m12">
        <span class="material-icons prefix">date_range</span>
        {{ form_widget(form_vuelo.fecha) }}
      </div>
      <div class="row center no-margin">
        <div class="input-field col s12" style="padding-top: 10px;">
          <input class="btn waves-effect waves-light" type="submit" name="buscar" value="Buscar">
        </div>
      </div>
    </form>
  </div>
</div>
<!-- FIN BUSCAR VUELO -->

<!-- BUSCAR HOTEL -->
<div id="buscar_hotel" class="card azul-gris z-depth-5" hidden>
  <div class="card-content white-text">
    <span class="card-title">Buscá tu hotel</span>
    <form action="#">
      <div class="input-field col s12">
        <span class="material-icons prefix">room</span>
        <input id="ciudad_hotel" class="validate" name="ciudad_hotel" type="text" placeholder="Destino">
      </div>
      <label class="col s12 white-text">FECHAS</label>
      <div class="input-field col s12 m6">
        <span class="material-icons prefix">date_range</span>
        <input id="checkin" name="checkin" type="text" class="datepicker" placeholder="Entrada">
      </div>
      <div class="input-field col s12 m6">
        <span class="material-icons prefix">date_range</span>
        <input id="checkout" name="checkout" type="text" class="datepicker" placeholder="Salida">
      </div>
      <div class="row no-margin">
        <div class="input-field col s12 m6">
          <span class="material-icons prefix">person</span>
          <input id="cant_hotel" type="number" class="validate" name="cant_hotel" placeholder="Cant. personas">
        </div>
        <div class="input-field col s12 m6 center" style="padding-top: 10px;">
          <input class="btn waves-effect waves-light" type="submit" name="buscar" value="Buscar">
        </div>
      </div>
    </form>
  </div>
</div>
<!-- FIN BUSCAR HOTEL -->

