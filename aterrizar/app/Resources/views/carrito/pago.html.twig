{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
  <div class="row">
    <h1 class="light center-align">Este es tu carrito</h1>

    <div class="col s12 m8">
      <!-- ITEMS DEL CARRITO -->

      <div class="col s12">
        <div class="card hoverable darken-1">
          <div class="card-content">
            <span class="card-title">¿Quién viaja?</span>
            <div class="row">
              <div class="input-field col s12 m6">
                <label for="nombre">Nombre/s</label>
                <input type="text" name="nombre" value="">
              </div>
              <div class="input-field col s12 m6">
                <label for="apellido">Apellido/s</label>
                <input type="text" name="apellido" value="">
              </div>
              <div class="input-field col s12 m6">
                <select name="">
                  <option value="">Argentina</option>
                  <option value="">Brasil</option>
                  <option value="">Chile</option>
                </select>
                <label>Nacionalidad</label>
              </div>
              <div class="input-field col s12 m6">
                <select name="">
                  <option value="">DNI</option>
                  <option value="">LE</option>
                  <option value="">PASAPORTE</option>
                </select>
                <label>Tipo de documento</label>
              </div>
              <div class="input-field col s12 m6">
                <label for="nacimiento">Fecha de nacimiento</label>
                <input type="text" name="nacimiento" class="datepicker">
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col s12">
        <div class="card hoverable darken-1">
          <div class="card-content">
            <span class="card-title">¿Cómo querés pagar?</span>
            <div class="row">
              <div class="input-field col s12 m6">
                <select name="">
                  <option value="">American Express</option>
                  <option value="">Mastercard</option>
                  <option value="">Visa</option>
                </select>
                <label>Tarjeta</label>
              </div>
              <div class="input-field col s12 m6">
                <label for="numero_tarjeta">Numero de tarjeta</label>
                <input type="number" name="numero_tarjeta" value="">
              </div>
              <div class="input-field col s12 m6">
                <label for="expiracion">Fecha de expiración</label>
                <input type="text" name="expiracion" class="datepicker">
              </div>
              <div class="input-field col s12 m6">
                <label for="cod">Código de seguridad</label>
                <input type="number" name="cod" value="">
              </div>
              <div class="input-field col s12 m6">
                <label for="titular">Titular de la tarjeta</label>
                <input type="text" name="titular" value="">
              </div>
              <div class="input-field col s12 m6">
                <label for="documento_titular">Documento del titular de la tarjeta</label>
                <input type="number" name="documento_titular" value="">
              </div>
              <div class="input-field col s12 m6">
                <select name="">
                  <option value="">M</option>
                  <option value="">F</option>
                  <option value="">OTRO</option>
                </select>
                <label>Sexo</label>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col s12">
        <div class="card hoverable darken-1">
          <div class="card-content row">
            <div class="col s6">
              <p>
                <input type="checkbox" id="test5" />
                <label for="test5">Leí y acepto las condiciones de compra y políticas de privacidad.</label>
              </p>
            </div>
            <div class="col s6">
              <input class="btn right" type="submit" name="Comprar" value="Comprar">
            </div>
          </div>
        </div>
      </div>
      <!-- FIN ITEMS -->


    </div>

    <div class="col s12 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title center-align">Detalle de la compra</span>
          <div class="row no-margin padding">
            <p><span class="left">Pasaje</span><span class="right">$ 480</span></p>
          </div>
          <div class="row no-margin padding">
            <p><span class="left">Impuestos, tasas y cargos</span><span class="right">$ 22.408</span></p>
          </div>
          <div class="row no-margin padding">
            <p><span class="left green-text">Descuento Aterrizar.com</span><span class="right">- $ 42.216</span></p>
          </div>
          <div class="row no-margin total padding">
            <p class="texto-medium light"><span class="left big">Total a pagar</span><span class="right bold"> $ 91.382</span></p>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
{% endblock %}
